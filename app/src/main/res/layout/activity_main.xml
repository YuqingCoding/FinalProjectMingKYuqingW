<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodMap_background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_marginTop="50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp"
    android:orientation="vertical">


    <ImageView

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="16dp"
        android:src="@drawable/FoodMap_logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Food Map"
        android:textSize="36sp"
        android:textStyle="italic"
        android:textColor="#ED897E"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="120dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/title_username"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/title_password"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp" />


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:background="#F097A5"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="@string/title_open"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FDF5B8"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:text="@string/other_login"
        android:onClick="loginAuth"
        />

</LinearLayout>