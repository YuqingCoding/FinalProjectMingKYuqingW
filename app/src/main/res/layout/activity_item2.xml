<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/cardview_light_background"
    tools:context=".Item2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF4F1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title_image"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurant_two"
            android:paddingBottom="@android:dimen/app_icon_size"/>

        <TextView
            android:id="@+id/item_text_view"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:text="Dream Coffee"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="36sp"
            android:padding="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="20dp"
            android:textColor="#9A5666"
            android:text="Coffee, Cake, Brunch"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:padding="10dp"
                android:id="@+id/location"
                android:layout_width="164dp"
                android:layout_height="129dp"
                android:src="@drawable/icon_location" />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="188dp"
                android:layout_height="80dp"
                android:layout_marginLeft="27dp"
                android:layout_toRightOf="@id/location"
                android:padding="10dp"
                android:text="43 W 26th St, New York, 10010
"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:padding="10dp"
                android:id="@+id/get_direction"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_text"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/location"
                android:background="#FD687A"
                android:textColor="@android:color/background_light"
                android:onClick="getDirection"
                android:text="Get Direction" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:padding="10dp"
                android:id="@+id/menu"
                android:layout_width="164dp"
                android:layout_height="129dp"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@+id/menu"
                android:padding="8dp"
                android:text="Menu"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#9A5666" />

            <TextView
                android:padding="4dp"
                android:id="@+id/menu_text"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@+id/menu"
                android:layout_below="@+id/menu_title"
                android:text="Salads
Burgers and Sandwiches

Desserts

"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        </RelativeLayout>

        <TextView
            android:padding="10dp"
            android:id="@+id/recom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommendations"
            android:textColor="#9A5666"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:padding="10dp"
            android:id="@+id/dishes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Vegetable Salad,
Beef Burger,
Grey Bar Super Pizza,
Fries
"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:id="@+id/comments_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textColor="#9A5666"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <TextView
                android:padding="10dp"
                android:id="@+id/comments_text_view"
                android:layout_below="@id/comments_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Nice!"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:padding="10dp"
                android:id="@+id/give"
                android:layout_below="@id/comments_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give us your comments"
                android:textColor="#9A5666"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:padding="10dp"
                android:id="@+id/user_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/give"
                android:hint="Write your comments here"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Button
                android:padding="10dp"
                android:id="@+id/submit"
                android:layout_below="@id/user_comments"
                android:layout_width="257dp"
                android:layout_height="38dp"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:gravity="center"

                android:text="Submit"
                android:background="#FD687A"
                android:textColor="@android:color/background_light"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>



    </LinearLayout>

</ScrollView>