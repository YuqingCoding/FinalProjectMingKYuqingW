<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/cardview_light_background"
    tools:context=".ItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title_image"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurant_one"
            android:paddingBottom="@android:dimen/app_icon_size"/>

        <TextView
            android:id="@+id/item_text_view"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:text="Item Detail Here"
            android:textColor="#000"
            android:textSize="30sp"
            android:padding="@android:dimen/app_icon_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="20dp"
            android:text="American, Bars, Breakfast, Brunch"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:padding="10dp"
                android:id="@+id/location"
                android:layout_width="164dp"
                android:layout_height="129dp"
                android:src="@drawable/location" />

            <TextView
                android:padding="10dp"
                android:id="@+id/location_text"
                android:layout_width="189dp"
                android:layout_height="80dp"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@+id/location"
                android:text="43 W 26th St, New York, 10010
"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:padding="10dp"
                android:id="@+id/get_direction"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_text"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/location"
                android:onClick="getDirection"
                android:text="Get Direction" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:padding="10dp"
                android:id="@+id/menu"
                android:layout_width="164dp"
                android:layout_height="129dp"
                android:src="@drawable/menu" />

            <TextView
                android:padding="10dp"
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:layout_toRightOf="@+id/menu"
                />

            <TextView
                android:padding="10dp"
                android:id="@+id/menu_text"
                android:layout_width="189dp"
                android:layout_height="80dp"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@+id/menu"
                android:layout_below="@+id/menu_title"
                android:text="Salads
Burgers and Sandwiches
Main dishes
Sides
Desserts

"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        </RelativeLayout>

        <TextView
            android:padding="10dp"
            android:id="@+id/recom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommendations"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:padding="10dp"
            android:id="@+id/dishes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetable Salad
Beef Burger
Grey Bar Super Pizza
Fries
"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:id="@+id/comments_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <TextView
                android:padding="10dp"
                android:id="@+id/comments_text_view"
                android:layout_below="@id/comments_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nice!"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:padding="10dp"
                android:id="@+id/give"
                android:layout_below="@id/comments_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give us your comments"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:padding="10dp"
                android:id="@+id/user_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/give"
                android:hint="Write your comments here"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Button
                android:padding="10dp"
                android:id="@+id/summit"
                android:layout_below="@id/user_comments"
                android:layout_width="257dp"
                android:layout_height="38dp"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:onClick="summit"
                android:text="Summit"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>



    </LinearLayout>

</ScrollView>